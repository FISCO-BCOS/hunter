if(HUNTER_ENABLED)
    include(hunter_internal_error)
    include(hunter_status_debug)
else()
    function(hunter_internal_error)
        message(FATAL_ERROR ${ARGV})
    endfunction()

    function(hunter_status_debug)
        message(${ARGV})
    endfunction()
endif()

get_filename_component(_install_dir "${CMAKE_CURRENT_LIST_DIR}/../../../" ABSOLUTE)

add_library("wedpr-crypto::crypto" STATIC IMPORTED)
set_target_properties(wedpr-crypto::crypto PROPERTIES
    INTERFACE_INCLUDE_DIRECTORIES "${WEDPR_INCLUDE_INSTALL_DST_DIR}"
    @TARGET_INTERFACE_COMPILE_DEFINITIONS@
)

add_library("wedpr-crypto::extend-crypto" STATIC IMPORTED)
set_target_properties(wedpr-crypto::extend-crypto PROPERTIES
    INTERFACE_INCLUDE_DIRECTORIES "${WEDPR_INCLUDE_INSTALL_DST_DIR}"
    @TARGET_INTERFACE_COMPILE_DEFINITIONS@
)

# Get all libwedpr-cryptoTargets-*.cmake files
get_filename_component(_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
file(GLOB TARGET_FILES "${_DIR}/wedpr-cryptoTargets-*.cmake")
foreach(file ${TARGET_FILES})
    include(${file})
endforeach()
set(WEDPR-CRYPTO_LIBRARIES wedpr-crypto::crypto wedpr-crypto::extend-crypto)
